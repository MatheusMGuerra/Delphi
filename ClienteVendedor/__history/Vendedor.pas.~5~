unit Vendedor;

interface

uses system.classes, system.SysUtils, Pessoa;

type
  TVendedor = class(TPessoa)
  protected
    function validacao: boolean; override;
    function acaoLista(lista: TStringList): boolean; override;
  public
    comissao: double;
    tipo: char;
  end;

implementation

{ TVendedor }

function TCliente.acaoLista(lista: TStringList): boolean;
begin
  Result := False;
  auxiliar := (' | Comissão: ' + (IntToStr(Comissao)) + ' | Tipo do vendedor: ' + tipo);
  inherited;
  Result := True;
end;

function TCliente.validacao: boolean;
begin
  if inherited then
  begin
    if (comissao > 0) AND ((tipo = 'I') OR (tipo = 'E')) then
    begin
      result := true;
    end
    else
    begin
      result := false;
    end;
  end
  else
  begin
    result := false;
  end;
end;

end.
